<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Usuario</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <!-- Header -->
    <header>
        <nav class="navbar navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('app_login') }}">
                    <img src="https://i.ibb.co/8m8GYfT/Logo-Uni.jpg" alt="UNI Logo" width="50">
                </a>
                <div class="d-flex justify-content-center">
                    <a href="{{ path('app_menu_admin') }}" class="btn btn-outline-secondary mx-auto">Inicio</a>
                </div>
                <span class="navbar-text">
                    {{ app.user.userIdentifier }},<a href="{{ path('app_logout') }}">Cerrar Sesión</a>
                </span>
            </div>
        </nav>
    </header>

    <!-- Formulario -->
    <div class="container mt-5">
        <h1 class="text-center mb-4">Registro de Usuario</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                {{ form_start(registrationForm, { 'attr': { 'class': 'needs-validation' } }) }}

                <!-- Campo de Usuario -->
                <div class="mb-3">
                    {{ form_label(registrationForm.username, 'Usuario', { 'label_attr': { 'class': 'form-label' } }) }}
                    {{ form_widget(registrationForm.username, { 'attr': { 'class': 'form-control', 'placeholder': 'Escriba el usuario' } }) }}
                    {{ form_errors(registrationForm.username) }}
                </div>

                <!-- Campo de Nombre -->
                <div class="mb-3">
                    {{ form_label(registrationForm.nombre, 'Nombres', { 'label_attr': { 'class': 'form-label' } }) }}
                    {{ form_widget(registrationForm.nombre, { 'attr': { 'class': 'form-control', 'placeholder': 'Escriba los nombres' } }) }}
                    {{ form_errors(registrationForm.nombre) }}
                </div>

                <!-- Campo de Apellido -->
                <div class="mb-3">
                    {{ form_label(registrationForm.apellido, 'Apellidos', { 'label_attr': { 'class': 'form-label' } }) }}
                    {{ form_widget(registrationForm.apellido, { 'attr': { 'class': 'form-control', 'placeholder': 'Escriba los apellidos' } }) }}
                    {{ form_errors(registrationForm.apellido) }}
                </div>

                <!-- Campo de Tipo de Usuario -->
                <div class="mb-3">
                    {{ form_label(registrationForm.tipoUsuario, 'Tipo de Usuario', { 'label_attr': { 'class': 'form-label' } }) }}
                    {{ form_widget(registrationForm.tipoUsuario, { 'attr': { 'class': 'form-control' } }) }}
                    {{ form_errors(registrationForm.tipoUsuario) }}
                </div>

                <!-- Campo de Contraseña -->
                <div class="mb-3">
                    {{ form_label(registrationForm.plainPassword, 'Contraseña', { 'label_attr': { 'class': 'form-label' } }) }}
                    {{ form_widget(registrationForm.plainPassword, { 'attr': { 'class': 'form-control', 'placeholder': 'Escriba la contraseña' } }) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>

                <!-- Aceptar términos -->
                <div class="mb-3 form-check">
                    {{ form_widget(registrationForm.agreeTerms, { 'attr': { 'class': 'form-check-input' } }) }}
                    {{ form_label(registrationForm.agreeTerms, 'Aceptar términos y condiciones', { 'label_attr': { 'class': 'form-check-label' } }) }}
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>                

                <!-- Botón de Registro -->
                <button type="submit" class="btn btn-primary w-100">Registrar</button>

                <div class="mb-3 form-check">                   
                </div>
                <div class="mb-3 form-check"> 
                </div>
                <div class="mb-3 form-check">                   
                </div>
                <div class="mb-3 form-check"> 
                </div>

                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-light text-center py-3 fixed-bottom">
        <p>© UNI</p>
        <p>Contáctenos | Sede Central Avenida Universitaria | Teléfono: (505) 2270-1509</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
