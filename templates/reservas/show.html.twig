{% extends 'base.html.twig' %}

{% block title %}Reservas{% endblock %}

{% block body %}
    <h1>Reservas</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reserva.id }}</td>
            </tr>
            <tr>
                <th>Usuario</th>
                <td>{{ reserva.usuario.username }}</td>
            </tr>
            <tr>
                <th>Medio</th>
                <td>{{ reserva.medios.tipomedioid.nombreMedio }}</td>
            </tr>
            <tr>
                <th>Aula</th>
                <td>{{ reserva.aulas.codigo }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ reserva.descripcion }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ reserva.fecha ? reserva.fecha|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ reserva.estado }}</td>
            </tr>
            <tr>
                <th>Hora_inicio</th>
                <td>{{ reserva.horaInicio ? reserva.horaInicio|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Hora_final</th>
                <td>{{ reserva.horaFinal ? reserva.horaFinal|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reservas_index') }}">back to list</a>

    <a href="{{ path('app_reservas_edit', {'id': reserva.id}) }}">edit</a>

    {{ include('reservas/_delete_form.html.twig') }}
{% endblock %}
