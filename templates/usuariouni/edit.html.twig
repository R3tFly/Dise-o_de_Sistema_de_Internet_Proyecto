<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Editar Usuario{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <!-- Header -->
    <header>
        <nav class="navbar navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('app_login') }}">
                    <img src="https://i.ibb.co/8m8GYfT/Logo-Uni.jpg" alt="UNI Logo" width="50">
                </a>
                <div class="d-flex justify-content-center">
                    <a href="{{ path('app_usuariouni_index') }}" class="btn btn-outline-secondary mx-auto">Inicio</a>
                </div>
                <span class="navbar-text">
                    {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Cerrar Sesión</a>
                </span>
            </div>
        </nav>
    </header>

    <!-- Formulario -->
    <div class="container mt-5">
        <h1 class="text-center mb-4">Editar Usuario</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.nombre, 'Nombres', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.nombre, {'attr': {'class': 'form-control', 'placeholder': 'Escriba los nombres'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.apellido, 'Apellidos', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.apellido, {'attr': {'class': 'form-control', 'placeholder': 'Escriba los apellidos'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.username, 'Usuario', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Escriba el usuario'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.password, 'Contraseña', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Escriba la contraseña'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.tipoUsuario, 'Tipo de Usuario', { 'label_attr': { 'class': 'form-label' } }) }}
                        {{ form_widget(form.tipoUsuario, { 'attr': { 'class': 'form-control' } }) }}
                        {{ form_errors(form.tipoUsuario) }}
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Editar</button>
                    
                <div class="mb-3 form-check">                   
                </div>
                <div class="mb-3 form-check"> 
                </div>
                <div class="mb-3 form-check">                   
                </div>
                <div class="mb-3 form-check"> 
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-light text-center py-3 fixed-bottom">
        <p>© UNI</p>
        <p>Contáctenos | Sede Central Avenida Universitaria | Teléfono: (505) 2270-1509</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
