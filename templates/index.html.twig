{% extends 'base.html.twig' %}

{% block title %}Iniciar Sesión{% endblock %}

{% block body %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <header>
        <nav class="navbar navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="https://i.ibb.co/8m8GYfT/Logo-Uni.jpg" alt="UNI Logo" width="50">
                </a>
                <span class="navbar-text">
                    Universidad Nacional de Ingeniería
                </span>
                <span class="navbar-text">
                    
                </span>
            </div>
        </nav>
    </header>
    
    <main class="container d-flex justify-content-center align-items-center" style="height: 100%;">
        <div class="row w-100">
            <!-- Imagen a la izquierda -->
            <div class="col-md-6 d-flex justify-content-center align-items-center">
                <img src="https://i.ibb.co/5FVBxMp/image.png" alt="Data" class="img-fluid">
            </div>

            <!-- Formulario a la derecha -->
            <div class="col-md-6 d-flex flex-column justify-content-center">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            <!--Estás conectado como {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Cerrar Sesión</a>-->
                        </div>
                    {% endif %}

                    <div class="mb-3">
                        <label for="username" class="form-label">Usuario</label>
                        <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" placeholder="Usuario" required autofocus>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Contraseña</label>
                        <input type="password" name="_password" id="password" class="form-control" placeholder="Contraseña" required>
                    </div>
                    
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    
                    <button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>
                    <!--<a href="{{ path('app_menu_docente') }}">Docente</a>-->
                    <!--<a href="{{ path('app_menu_admin') }}">Administrador</a>-->
                </form>
            </div>
        </div>
    </main>
    
    <footer class="bg-light text-center py-3 fixed-bottom">
        <p>© UNI</p>
        <p>Contáctenos | Sede Central Avenida Universitaria | Teléfono: (505) 2270-1509</p>
    </footer>
{% endblock %}
