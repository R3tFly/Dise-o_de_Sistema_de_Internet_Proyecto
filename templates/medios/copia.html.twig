{% extends 'base.html.twig' %}

{% block title %}Medios index{% endblock %}

{% block body %}

<header>
        <nav class="navbar navbar-light bg-light position-relative">
            <div class="container-fluid">
                <a class="navbar-brand" href="Login.html">
                    <img src="https://i.ibb.co/8m8GYfT/Logo-Uni.jpg" alt="UNI Logo" width="50">
                </a>
                <span class="navbar-text position-absolute top-50 start-50 translate-middle">
                    Universidad Nacional de Ingeniería
                </span>
                <div class="d-flex align-items-center ms-auto">
                    <form class="d-flex me-2">
                        <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Buscar">
                        <button class="btn btn-outline-success" type="submit">Buscar</button>
                    </form>
                    <span class="navbar-text">
                        {{ app.user.userIdentifier }},<a href="{{ path('app_logout') }}">Cerrar Sesión</a>
                    </span>
                </div>
            </div>
        </nav>
    </header>
    <h1>Medios index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cantidad</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medio in medios %}
            <tr>
            <button class="btn">Medio 1</button>
                <td>{{ medio.id }}</td>
                <td>{{ medio.cantidad }}</td>
                <td>
                    <a href="{{ path('app_medios_show', {'id': medio.id}) }}">show</a>
                    <a href="{{ path('app_medios_edit', {'id': medio.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_medios_new') }}">Create new</a>

    <footer class="bg-light text-center py-3">
        <p>© UNI</p>
        <p>Contáctenos | Sede Central Avenida Universitaria | Teléfono: (505) 2270-1509</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    {{ encore_entry_script_tags('Admin') }}
{% endblock %}
