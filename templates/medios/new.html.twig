<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nuevo Medio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('app_menu_admin') }}">
                    <img src="https://i.ibb.co/8m8GYfT/Logo-Uni.jpg" alt="UNI Logo" width="50">
                </a>
                <div class="d-flex justify-content-center">
                    <a href="{{ path('app_medios_index') }}" class="btn btn-outline-secondary mx-auto">Inicio</a>
                </div>
                <span class="navbar-text">
                    {{ app.user.userIdentifier }} <a href="{{ path('app_logout') }}">(Cerrar Sesión)</a>
                </span>
            </div>
        </nav>
    </header>

    <!-- Formulario -->
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center mb-4">Crear Nuevo Medio</h1>
                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.tipo_medio_id, 'Tipo de Medio', { 'label_attr': { 'class': 'form-label' } }) }}
                        {{ form_widget(form.tipo_medio_id, { 'attr': { 'class': 'form-control' } }) }}
                        {{ form_errors(form.tipo_medio_id) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.cantidad, 'Cantidad', { 'label_attr': { 'class': 'form-label' } }) }}
                        {{ form_widget(form.cantidad, { 'attr': { 'class': 'form-control' } }) }}
                        {{ form_errors(form.cantidad) }}
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Agregar</button>
                {{ form_end(form) }}
                
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-light text-center py-3 fixed-bottom">
        <p>© UNI</p>
        <p>Contáctenos | Sede Central Avenida Universitaria | Teléfono: (505) 2270-1509</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
